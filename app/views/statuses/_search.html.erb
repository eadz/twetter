<form action="/search" id="doingForm" method="get">
    <input id="tab_action" name="tab" type="hidden" value="home"/>
    <input id="in_reply_to_status_id" name="in_reply_to_status_id" type="hidden" value=""/>
    <input id="in_reply_to" name="in_reply_to" type="hidden" value=""/>
    <input id="source" name="source" type="hidden" value=""/>
    <fieldset class="common-form standard-form">
        <div class="bar">
            <h3><label for="status" class="doing">What keyword are you searching for?</label></h3>
      <span id="chars_left_notice" class="numeric">

        <strong id="status-field-char-counter" class="char-counter"></strong>
      </span>
        </div>
        <div class="info">
            <input id="search" name="keyword" value="<%= @keyword %>" />
            <div class="status-btn">
                <input type="submit" name="update" value="search" id="update-submit" class="status-btn round-btn"/>
            </div>
        </div>
    </fieldset>
</form>
